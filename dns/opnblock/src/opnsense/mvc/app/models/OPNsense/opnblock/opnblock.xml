<model>
    <mount>//OPNsense/opnblock</mount>
    <version>0.1</version>
    <description>Ad-blocker for Unbound DNS</description>
    <items>
        <general>
            <enabled type="BooleanField">
                <default>0</default>
                <Required>Y</Required>
            </enabled>
                <blacklist type="CSVListField">
                    <Required>Y</Required>
                    <multiple>Y</multiple>
                    <mask>^(https?|ftp?|http):\/\/[^\s\/$.?#].[^\s]*$</mask>
                    <ChangeCase>lower</ChangeCase>
                    <ValidationMessage>Please provide a valid URL!</ValidationMessage>
                </blacklist>
                <whitelist type="CSVListField">
                    <Required>Y</Required>
                    <multiple>Y</multiple>
                    <ChangeCase>lower</ChangeCase>
                </whitelist>
        </general>
    </items>
</model>
